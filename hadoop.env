# ============================================================================
# CONFIGURATION HADOOP
# ============================================================================
# Ces variables configurent le comportement de Hadoop/HDFS
# ============================================================================

# Configuration du système de fichiers
# Indique que HDFS est sur le namenode, port 9000
CORE_CONF_fs_defaultFS=hdfs://namenode:9000

# Configuration HTTP
CORE_CONF_hadoop_http_staticuser_user=root

# Configuration de la réplication HDFS
# 2 = chaque fichier est copié sur 2 DataNodes (tolérance aux pannes)
HDFS_CONF_dfs_replication=2

# Permissions HDFS (désactivées pour simplifier en dev)
HDFS_CONF_dfs_permissions_enabled=false

# Configuration du NameNode
HDFS_CONF_dfs_namenode_datanode_registration_ip___hostname___check=false

# Mémoire pour le NameNode
HDFS_CONF_dfs_namenode_handler_count=100

# Configuration des DataNodes
HDFS_CONF_dfs_datanode_data_dir=/hadoop/dfs/data
